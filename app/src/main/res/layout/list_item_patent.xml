<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_title_patent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_quantity_patent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_title_patent"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="15sp" />

        <TextView

            android:id="@+id/txt_comapny_patent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_quantity_patent"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_quantity_patent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="WALANCE"
            android:textSize="14sp" />


    </RelativeLayout>

</LinearLayout>