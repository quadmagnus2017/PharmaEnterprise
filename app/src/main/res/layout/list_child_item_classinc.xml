<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblListItem_classic_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
            android:paddingTop="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblListItem_classic_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblListItem_classic_title"
            android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
            android:text="ABBOUT (ACUTCARE)"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/lblListItem_classic_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblListItem_classic_detail"
            android:layout_marginTop="5dp"
            android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
            android:text="@string/rs"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblListItem_classic_more"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblListItem_classic_price"
            android:layout_marginTop="5dp"
            android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
            android:text="TESTORANT"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/lblListItem_classic_pack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lblListItem_classic_price"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
            android:text="Packing : 1MI"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"></View>
</LinearLayout>